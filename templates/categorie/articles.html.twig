{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{  categorie.getTitre }} </h1>

    {% if infos is defined %}
        <p style='color:green;'>{{infos}}</p>
    {% endif %}

    <h2>Orga</h2>
    <br>

        <a href='/article/create?catId={{categorie.getId}}'><button class='btn btn-secondary' type='button'>Cr√©er item</button></a><br><br>

    <h2>Liste</h2>
    <br>

    {% if articles is defined %}
        {% for article in articles %}
            <p>{{ article.getTitre }} <a href='/article/delete?catId={{categorie.getId}}&itemId={{article.getId}}'><img src='#'><a></p>
        {% endfor %}
    {% endif %}

    
</div>
{% endblock %}
