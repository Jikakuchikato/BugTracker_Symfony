{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user %}
        <h1>Modification du mot de passe </h1>
    {% endif %}


    {{ form_start(mdpForm) }}

        <p>Mot de passe actuel
            {{ form_row(mdpForm.mdpActuel) }}
        </p>
        <p>Nouveau mot de passe
            {{ form_row(mdpForm.mdpNouveau) }}
        </p>
        <p>Répéter nouveau mot de passe
            {{ form_row(mdpForm.mdpNouveauVerif) }}
        </p>
            {% if mdpChangement is defined %}
                <p style='color:red;'>
                    {{ mdpChangement }}
                </p>
            {% endif %}
        <button type="submit" class="btn btn-secondary" style='margin-left:30px;'>Mettre à jour</button>
    {{ form_end(mdpForm) }}


</div>
{% endblock %}