{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user %}
        <h1>Bienvenue sur votre profil {{app.user.userIdentifier}} </h1>
    {% endif %}


    {{ form_start(profilForm) }}
        <p>Nom d'utilisateur
        {{ form_row(profilForm.username, {'value' : nomUtilisateur})}}
        </p>
        <p>Prénom
        {{ form_row(profilForm.prenom, {'value' : prenom}) }}
        </p>
        <p>Nom
        {{ form_row(profilForm.nom, {'value' : nom}) }}
        </p>
        <p>Date de naissance
        {{ form_row(profilForm.dateNaissance,  {'value' : dateNaissance}) }}
        </p>
        <a href='/profil/mdp'><button type='button' class='btn btn-secondary'>Modifier le mot de passe</button></a><br><br> 
        <button type="submit" class="btn btn-secondary" style='margin-left:30px;'>Mettre à jour</button>
    {{ form_end(profilForm) }}


</div>
{% endblock %}