{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Panneau Utilisateur</h1>
    <br>
    {% if mdpChangement is defined %}
        <p style='color:green;'>{{mdpChangement}}</p>
    {% endif %}
    {% if infos is defined %}
        <p style='color:green;'>{{infos}}</p>
    {% endif %}
    {% if erreur is defined %}
        <p style='color:red;'>{{erreur}}</p>
    {% endif %}

    <h2>Organiser mes projets :</h2><br>

    <a href="/projet/create"><button class="btn btn-secondary">Cr√©er un projet</button></a>
    

    <br><br>
    <h2>Vos Projets :</h2>

    {% if projets is defined %}
         {% for projet in projets %}
         <fieldset>
            <legend>
                <a href="/projet?projetId={{projet.getId}}">{{projet.getTitre}} </a>
            </legend>
            <label>
                {{ projet.getDescription }}
            </label>
            <label>
                <a href=""><img src="./settings.png"></a>
                <a href="/projet/delete?projetId={{projet.getId}}"><img src="/root/Bureau/delete.png"></a>
            </label>
            
        </fieldset>
        {% endfor %}
    {% endif %}


</div>
{% endblock %}