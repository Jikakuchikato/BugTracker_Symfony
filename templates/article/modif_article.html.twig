{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user %}
        <h1>Modification de l'article </h1>
    {% endif %}


    {{ form_start(itemForm) }}

        <p>Mot de passe actuel
            {{ form_row(itemForm.titre, { value : item.titre }) }}
        </p>
        <p>Nouveau mot de passe
            {{ form_row(itemForm.description, { value : item.description     }) }}
        </p>
        <p>Répéter nouveau mot de passe
            {{ form_row(itemForm.priorite, { value : item.priorite }) }}
        </p>
        <button type="submit" class="btn btn-secondary" style='margin-left:30px;'>Mettre à jour</button>
    {{ form_end(itemForm) }}


</div>
{% endblock %}