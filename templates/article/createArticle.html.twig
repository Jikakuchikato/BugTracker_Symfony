{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 900px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Créer item </h1>
    
    {{ form_start(createArticleForm) }}
        <p> Titre :
            {{ form_row(createArticleForm.titre) }}
        </p>
        <p> Description :
            {{ form_row(createArticleForm.description) }}
        </p>
        <p> Type :
            {{ form_row(createArticleForm.priorite) }}
        </p>

        <button type='submit' class='btn btn-secondary'>Créer</button>

    {{ form_end(createArticleForm) }}

</div>
{% endblock %}